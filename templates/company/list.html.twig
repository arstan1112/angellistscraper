{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2 d-none d-md-block">
            {% include 'sidebar.html.twig' %}
        </div>
            <div class="col-sm-10">
                <div class="list-group">
                    <a href="#" class="list-group-item" style="background-color: #f9f9f9">
                        <div class="row">
                            <div class="col-sm-2" style="color: #0a0a0a">
                                Name
                            </div>
                            <div class="col-sm-1" style="color: #0a0a0a">
                                Joined
                            </div>
                            <div class="col-sm-2" style="color: #0a0a0a">
                                Location
                            </div>
                            <div class="col-sm-3" style="color: #0a0a0a">
                                Market
                            </div>
                            <div class="col-sm-2" style="color: #0a0a0a">
                                Website
                            </div>
                            <div class="col-sm-2" style="color: #0a0a0a">
                                Employees
                            </div>
                        </div>
                    </a>
                    {% for company in companies %}
                        <div class="list-group-item">
                            <div class="row">
                                <div class="col-sm-2">
                                    {{ company.name }}
                                </div>
                                <div class="col-sm-1">
                                    {{ company.joined|date('Y-m') }}
                                </div>
                                <div class="col-sm-2">
                                    {{ company.location }}
                                </div>
                                <div class="col-sm-3">
                                    {{ company.market }}
                                </div>
                                <div class="col-sm-2">
{#                                    <a href="{{ company.website }}">#}
                                    <a href="https://{{ company.website }}">
                                        {{ company.website }}
                                    </a>
                                </div>
                                <div class="col-sm-2">
                                    {{ company.employees }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <br>
                {% include 'pagination.html.twig' %}
            </div>
    </div>

</div>
{% endblock %}
